@model SmallRss.Web.Models.Home.IndexViewModel
<section name="GroupsSection"></section>
<section name="SelectedFeedSection"></section>
<section name="SelectedArticleSection"></section>
@section HeaderScripts {
<script type="text/javascript">
    var smallrss_config = {
        feedstatus_api: '@Url.Action("feedstatus", "api")',
        article_api: '@Url.Action("article", "api")',
        feed_api: '@Url.Action("feed", "api")',
        save_api: '@Url.Action("save", "api")',
        imageroot: '@Url.Content("~/")',
        showingAllArticles: @(Model.ShowAllArticles.ToString().ToLower()),
        connectedToSave: @(Model.ConnectedToSave.ToString().ToLower()),
    };  
</script>
}
@section Scripts {
<script type="text/javascript">
    $(function () {
        loadLocalSettings();
        $.getJSON(smallrss_config.feed_api, initialiseFeeds);
    });
</script>
}
