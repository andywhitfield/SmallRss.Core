<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="@Url.Content("~/favicon.ico")?v=1" />
    <link rel="apple-touch-icon" href="@Url.Content("~/images/smallrss.png")" sizes="32x32" />
    <title>SmallRss</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/smallrss.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/smallrss.min.css" asp-append-version="true" />
    </environment>
    @RenderSection("HeaderScripts", required: false)
</head>
<body>
    <header>
        <a href="@Url.Action("", "")"><img src="@Url.Content("~/images/smallrss.png")" width="28" height="28" alt="SmallRss" /><h1>SmallRss</h1></a>
        <span class="actions">
        @if (User != null && User.Identity.IsAuthenticated) {
            <text>
            <a href="@Url.Content("~/manage")">Manage Feeds</a> |
            <a href="@Url.Content("~/signout")">Logout</a>
            </text>
        } else {
            <a href="@Url.Content("~/signin")">Login</a>
        }
        </span>
    </header>
    
    @RenderBody()

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/simpleStorage/simpleStorage.js"></script>
        <script src="~/js/smallrss.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.4.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous">
        </script>
        <script src="~/lib/simpleStorage/simpleStorage.min.js"></script>
        <script src="~/js/smallrss.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
